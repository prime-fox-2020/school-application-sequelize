<%- include('partials/header', {title: 'SchoolApp Homepage'}) %>

<div class="container">
  <h1 class="mt-3">Subjects Data</h1>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Subject Name</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(el => { %>
        <tr>
          <td><%= el.id %></td>
          <td><%= el.subject_name %></td>
      <% }) %>
      <% if (!data.length) { %>
        <tr><td colspan="2" style="text-align: center;">Data tidak ditemukan</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>