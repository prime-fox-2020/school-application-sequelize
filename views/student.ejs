<%- include('partials/header', { title: 'Student List'}) %>

        <a class="btn btn-primary btn-lg" href="/" role="button">Go back to Home Page</a>
        <a class="btn btn-primary btn-lg" href="/student/add" role="button">Add Student</a>

    <div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Birth</th>
          </tr>
        </thead>
        <tbody>
          <% object.forEach(item => { %>
          <tr>
            <th scope="row"><%= item.id %></th>
            <td><%= item.first_name %></td>
            <td><%= item.last_name %></td>
            <td><%= item.email %></td>
            <td><%= item.gender %></td> 
            <td><%= item.birth_date %></td>
            <td><a class="btn btn-primary btn-lg mr-2" href="/student/<%= item.id %>/edit" role="button">Edit</a> <a class="btn btn-danger btn-lg" href="/student/<%= item.id %>/delete" role="button">delete</a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
      <%- include('partials/footer') %>