<%- include('../partials/header', {title: 'Data Subjects', page: 'Subject'}) %>

<main class="container pt-4 pb-4">
  <h3 class="d-inline-block">List of Subjects</h3>
  <a href="/subjects/add" class="btn btn-primary float-right">Add Subject</a>

  <% if(alert.type) { %>
  <%- include('../partials/alert', {alert}) %>
  <% } %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Subject Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>

      <% for ( let i = 0; i < subjects.length; i++ ) { %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td style="text-transform: capitalize;"><%= subjects[i].subjectName %></td>
        <td><a class="btn btn-info" href="/subjects/edit/<%= subjects[i].id %>">Edit</a> &nbsp; 
          <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')" href="/subjects/delete/<%= subjects[i].id %>">Delete</a></td>
      </tr>
      <% } %>

    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>