<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/boostrap.ejs') %>
        <title>Edit Student</title>
    </head>
    <body>
        <%- include('./partials/navbar.ejs') %>

        <div class="jumbotron">
            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% }%>
            
            <form action="/students/:id/edit" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">ID</label>
                    <input type="text" name="studentId" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= students.id %>" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">First name</label>
                    <input type="text" name="firstName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" autofocus placeholder="Enter your first name" value="<%= students.first_name %>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Last name</label>
                    <input type="text" name="lastName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your last name" value="<%= students.last_name %>">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Email address</label>
                    <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" value="<%= students.email %>">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Gender</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="gender">
                        <option selected disabled>Select Gender</option>
                        <option value="male" <%= students.gender === "male" ? "selected" : "" %>>Male</option>
                        <option value="female" <%= students.gender === "female" ? "selected" : "" %>>Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Birth date</label>
                    <input type="text" name="birthDate" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="MM-DD-YYYY" value="<%= students.birth_date %>">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </body>
</html>