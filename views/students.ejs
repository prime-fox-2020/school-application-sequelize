<%- include('./partials/head')%>
<style>
  form {
    margin: 0 auto;
    width:250px;
    display: flex;
    flex-flow: row;
  }
  </style>

<a href='/students/add' type="button" class="btn btn-primary btn-lg" >Add Students</a><br><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
      <th scope="col">Birth Date</th>
      <th scope='col'>Options</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < students.length;i++){%>
      <tr>
        <td><%= students[i].id %></td>
        <td><%= students[i].first_name %></td>
        <td><%= students[i].last_name %></td>
        <td><%= students[i].email %></td>
        <td><%= students[i].gender %></td>
        <td><%= students[i].birth_date %></td>
        <td>
          <a href='/students/<%= students[i].id %>/edit' type="button" class="btn btn-primary">EDIT</button>
          <a href="/students/<%= students[i].id %>/delete" type="button" class="btn btn-danger">DELETE</a></td>
      </tr>
      <% } %>
  </tbody>
</table>


<%- include('./partials/foot')%>