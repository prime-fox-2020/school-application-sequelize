<%- include('partials/header', {title: 'Students Data | SchoolApp'}) %>

<div class="container">
  <h1 class="title mt-4">Students Data</h1>
  <a href="/students/add"><button class="btn btn-primary">Add Students Data</button></a>
  <form class="form-inline my-2 my-lg-0" style="float: right;" method="POST" action="/students">
    <input class="form-control mr-sm-2" type="search" placeholder="Search by Email" aria-label="Search" name="email">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Gender</th>
        <th scope="col">Birth Date</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(el => { %>
        <tr>
          <td><%= el.id %></td>
          <td><%= el.first_name %></td>
          <td><%= el.last_name %></td>
          <td><%= el.email %></td>
          <td><%= el.gender %></td>
          <% const date = new Date(el.birth_date) %>
          <td><%= `${date.getDate()}/${date.getMonth()+1}/${date.getFullYear()}` %></td>
          <td>
            <a href="/students/<%= el.id %>/edit"><button class="btn btn-success">Edit</button></a>
            <a href="/students/<%= el.id %>/delete"><button class="btn btn-danger">Delete</button></a>
          </td>
        </tr>
      <% }) %>
      <% if (!data.length) { %>
        <tr><td colspan="7" style="text-align: center;">Data tidak ditemukan</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>