
<%- include('partial/header', { title: "Add New Student", header: "Insert New Student Data"} );%>
<% if (error) { %>
    <%= error %>
    <% }%><br>
<a href="/student" role="button">Show Student List</a>
<form action="/student/add" method="POST">
    <label>First Name :</label>
    <input type="text" name="first_name" placeholder="first_name" autofocus><br />
    <label>Last Name :</label>
    <input type="text" name="last_name" placeholder="last_name"><br>
    <label>Email :</label>
    <input type="text" name="email" placeholder="email"><br>
    <label>Gender :</label>
    <select name="gender">
        <option value="" selected disabled>Select</option>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select> <br>
    <label>Birth Date :</label>
    <input type="text" name="birth_date" placeholder="DD-MM-YYYY"><br>
    <button type="submit">Add Student</button>
</form>
</body>
</html>