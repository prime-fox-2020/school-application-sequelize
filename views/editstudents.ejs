<%- include('partials/top.ejs') %>
    
<h1>Edit Student's Information</h1>

<form action="/students/edit/<%= studentData.id %>" method="POST">
  <label for="firstName">First Name</label><br>
  <input type="text" id="firstName" name="firstName" placeholder="<%= studentData.firstName %>" minlength="4" autofocus required>
  <br><br>
  <label for="lastName">Last Name</label><br>
  <input type="text" id="lastName" name="lastName" placeholder="<%= studentData.lastName %>" minlength="4" required>
  <br><br>
  <label for="email">Email Address</label><br>
  <input type="text" id="email" name="email" placeholder="<%= studentData.email %>" required>
  <br><br>
  <label for="gender">Male/Female</label><br>
  <input type="text" id="gender" name="gender" placeholder="<%= studentData.gender %>" required>
  <br><br>
  <label for="birthDate">Birth Date</label><br>
  <input type="date" id="birthDate" name="birthDate" placeholder="<%= studentData.birthDate %>" required>
  <br><br>
  <button type="submit">Submit</button>
</form>

<%- include('partials/bottom.ejs') %>