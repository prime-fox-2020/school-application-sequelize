<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head', {title: "Teachers"}) %>

<body>
    <%- include ('./partials/navbar') %>
    <div class="jumbotron jumbotrom-fluid bg-light">
        <div class="container">
            <h1 class="display-3">List Teachers</h1>
            <p class="lead">
                <a class="btn btn-primary" href="/teachers/add" role="button">Add Teachers</a>
            </p>

            <% if (msg) { %>
            <div class="alert alert-info" role="alert">
                <%= msg %>
            </div>
            <% } %>

            <% if (data) { %>
            <table class="table table-striped table-inverse table-responsive">
                <thead class="thead-inverse">
                    <tr>
                        <th>id</th>
                        <th>first name</th>
                        <th>last name</th>
                        <th>email</th>
                        <th>gender</th>
                        <th>subject name</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(el => { %>
                    <tr>
                        <td><%= el.id %> </td>
                        <td><%= el.first_name %> </td>
                        <td><%= el.last_name %> </td>
                        <td><%= el.email %> </td>
                        <td><%= el.gender %> </td>
                        <td>
                            <a href="/teachers/<%= el.id %>/edit"><button
                                    class="btn btn-outline-primary">Edit</button></a>
                            <a href="/teachers/<%= el.id %>/delete"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
</body>

</html>