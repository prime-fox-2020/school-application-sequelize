<%- include('partials/header', {title: 'SchoolApp Homepage'}) %>

<div class="container">
  <h1 class="title mt-4">Teachers Data</h1>
  <table class="table mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Gender</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(el => { %>
        <tr>
          <td><%= el.id %></td>
          <td><%= el.first_name %></td>
          <td><%= el.last_name %></td>
          <td><%= el.email %></td>
          <td><%= el.gender %></td>
      <% }) %>
      <% if (!data.length) { %>
        <tr><td colspan="5" style="text-align: center;">Data tidak ditemukan</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>